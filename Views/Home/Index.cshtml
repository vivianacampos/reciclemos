@{
    ViewBag.Title = "ReCiclemos";
}

<!--Carrusel-->
<style>
    .transp {
        opacity: 0.9;
        filter: opacity(90%);
    }
    .barra {
        background-color: #28b5b5;
    }
    .espacio{
        padding: 1rem;
    }


</style>
<div class="container-fluid p-0">
    <div id="miCarrusel" class="carousel slide carousel-fade" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/Imagenes/clasificados.jpg" class="d-block w-100 transp" alt="" width="900" height="700">
            </div>
            <div class="carousel-item">
                <img src="~/Imagenes/materiales.jpeg" class="d-block w-100 transp" alt="" width="900" height="700">
            </div>
            <div class="carousel-item">
                <img src="~/Imagenes/PersonaConCaja.jpg" class="d-block w-100 transp" alt="" width="900" height="700">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#miCarrusel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#miCarrusel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>

    <!--Seccion media-->


    <div class="container-xl">
        

        <div class="row g-0 py-5 row-cols-1 row-cols-lg-3">
            <div class="feature col">
                <div class="feature-icon barra bg-gradient">
                    <svg class="bi" width="1em" height="1em"></svg>
                </div>
                <!--Card-->
                <h2 class="espacio">Noticias</h2>
                <!--Video-->
                <div class="card" style="width: 21.8rem;">
                    <iframe width="346" height="200" src="https://www.youtube.com/embed/qDbxCUOyLWc" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                    
                    <div class="card-body">
                        <p class="card-text"><a>#Reportajes T13</a></p>
                    </div>
                </div>

            </div>
            <div class="feature col">
                <div class="feature-icon barra  bg-gradient">
                    <svg class="bi" width="1em" height="1em"></svg>
                </div>
                <h2 class="espacio">Talleres</h2>
                <div class="card" style="width: 21.8rem;">
                    <iframe width="346" height="200" src="https://www.youtube.com/embed/xS_EPS2ZSfY" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                    <div class="card-body">
                        <p class="card-text">Ministerio del Medio Ambiente</p>
                    </div>
                </div>

            </div>
            <div class="feature col">
                <div class="feature-icon barra  bg-gradient">
                    <svg class="bi" width="1em" height="1em"><use xlink:href="#toggles2"></use></svg>
                </div>
                <h2 class="espacio">¿Cómo Reciclar?</h2>
                <div class="card" style="width: 21.8rem;">
                    <iframe width="346" height="200" src="https://www.youtube.com/embed/YfUMqsOHDeE" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                    <div class="card-body">
                        <p class="card-text">Ministerio del Medio Ambiente</p>
                    </div>
                </div>
            </div>
        </div>
    </div>



</div>

